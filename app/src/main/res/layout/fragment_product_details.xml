<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/offWhite"
    tools:context=".ui.home.ProductDetailsFragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product details"
        android:id="@+id/pp"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:layout_margin="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
    <ImageView
        android:id="@+id/pimage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_below="@+id/pp"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/pn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:layout_below="@+id/pimage"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"/>
    <TextView
        android:id="@+id/pname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="product name"
        android:layout_toEndOf="@+id/pn"
        android:layout_below="@id/pimage"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/pqt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity: "
        android:layout_below="@+id/pn"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"/>
    <TextView
        android:id="@+id/pquantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="product quantity"
        android:layout_toEndOf="@+id/pqt"
        android:layout_below="@id/pname"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/pc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cost: "
        android:layout_below="@+id/pqt"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"/>
    <TextView
        android:id="@+id/pcost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="product cost"
        android:layout_toEndOf="@+id/pc"
        android:layout_below="@id/pquantity"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/ps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop Name: "
        android:visibility="gone"
        android:layout_below="@+id/pc"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"/>
    <TextView
        android:id="@+id/pshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop name"
        android:visibility="gone"
        android:layout_toEndOf="@+id/ps"
        android:layout_below="@id/pcost"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/pd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description: "
        android:visibility="gone"
        android:layout_below="@+id/ps"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"/>
    <TextView
        android:id="@+id/pdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="product description"
        android:layout_toEndOf="@+id/pd"
        android:layout_below="@id/pshop"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/black"/>
    <Button
        android:id="@+id/addbt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        />
    <TextView
        android:id="@+id/ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Added"
        android:textColor="#29D119"
        android:textSize="24sp"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/stock"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/addbt"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"/>
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/stock"
        android:visibility="invisible"
        android:text="IN STOCK"/>
</RelativeLayout>